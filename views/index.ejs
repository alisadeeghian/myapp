<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
  <title><%= title %></title>

  <!-- Add to homescreen for Chrome on Android -->
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="icon" sizes="192x192" href="images/android-desktop.png">

  <!-- Add to homescreen for Safari on iOS -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="Material Design Lite">
  <link rel="apple-touch-icon-precomposed" href="images/ios-desktop.png">

  <!-- Tile icon for Win8 (144x144 + tile color) -->
  <meta name="msapplication-TileImage" content="images/touch/ms-touch-icon-144x144-precomposed.png">
  <meta name="msapplication-TileColor" content="#3372DF">

  <link rel="shortcut icon" href="images/favicon.png">

  <!-- SEO: If your mobile URL is different from the desktop URL, add a canonical link to the desktop page https://developers.google.com/webmasters/smartphone-sites/feature-phones -->
  <!--
    <link rel="canonical" href="http://www.example.com/">
    -->

  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.deep_purple-pink.min.css">
  <link rel="stylesheet" href="stylesheets/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

  <style>
    #view-source {
      position: fixed;
      display: block;
      right: 0;
      bottom: 0;
      margin-right: 40px;
      margin-bottom: 40px;
      z-index: 900;
    }
  </style>
</head>

<body class="mdl-demo mdl-color--grey-100 mdl-color-text--grey-700 mdl-base">
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header mdl-layout__header--scroll mdl-color--primary">
      <div class="mdl-layout--large-screen-only mdl-layout__header-row">
      </div>
      <div class="mdl-layout--large-screen-only mdl-layout__header-row">
        <h3>Stack OverFlow 10 Questions</h3>
      </div>
      <div class="mdl-layout--large-screen-only mdl-layout__header-row">
      </div>
      <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--primary-dark">
        <a href="#newest" class="mdl-layout__tab is-active">10 newest Android-related questions</a>
        <a href="#voted" class="mdl-layout__tab">10 most voted Android-related questions from last week</a>
      </div>
    </header>
    <main class="mdl-layout__content">
      <div class="mdl-layout__tab-panel is-active" id="newest">
        <% for(var i=0; i < newestQuestions.length; i++) { %>
        <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
          <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
              <div class="row">
                <div class="col-md-1">
                  <div class="statscontainer">
                    <div class="stats">
                      <div class="vote">
                        <div class="votes">
                          <span class="vote-count-post "><strong><%= newestQuestions[i].score %></strong></span>
                          <div class="viewcount">votes</div>
                        </div>
                      </div>
                      <div class="status unanswered">
                        <strong><%= newestQuestions[i].answer_count %></strong>answers
                      </div>
                    </div>
                    <div class="views ">
                      <%= newestQuestions[i].view_count %> views
                    </div>
                  </div>
                </div>
                <div class="col-md-10">
                  <h4><%= newestQuestions[i].title %></h4>
                  <div class="excerpt">
                    <p class="ellipsis" style="max-lines: 2;"><%- newestQuestions[i].body_markdown %></p>
                  </div>
                </div>

              </div>
            </div>
            <div class="mdl-card__actions">
              <a href="/question/<%= newestQuestions[i].question_id %> " class="mdl-button">Read more</a>
            </div>
          </div>
        </section>
        <% } %>
      </div>
      <div class="mdl-layout__tab-panel is-active" id="voted">
        <% for(var i=0; i < mostVotedQuestionsLastWeek.length; i++) { %>
        <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
          <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
              <div style="width: 100%; overflow: hidden;">
                <div class="statscontainer" style="float: left;">
                  <div class="stats">
                    <div class="vote">
                      <div class="votes">
                        <span class="vote-count-post "><strong><%= mostVotedQuestionsLastWeek[i].score %></strong></span>
                        <div class="viewcount">votes</div>
                      </div>
                    </div>
                    <div class="status unanswered">
                      <strong><%= mostVotedQuestionsLastWeek[i].answer_count %></strong>answers
                    </div>
                  </div>
                  <div class="views " title="8 views">
                    <%= mostVotedQuestionsLastWeek[i].view_count %> views
                  </div>
                </div>
                <div>
                  <h4><%= mostVotedQuestionsLastWeek[i].title %></h4>
                  <div class="excerpt">
                    <p class="ellipsis" style="max-lines: 2;"><%- mostVotedQuestionsLastWeek[i].body_markdown %></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="mdl-card__actions">
              <a href="/question/<%= mostVotedQuestionsLastWeek[i].question_id %> " class="mdl-button">Read more</a>
            </div>
          </div>
        </section>
        <% } %>
      </div>
      <footer class="mdl-mega-footer">
        <div class="mdl-mega-footer--bottom-section">
          <div class="mdl-logo">
            by Ali Sadeghian
          </div>
        </div>
      </footer>
    </main>
  </div>
  <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>